@inject armaradio.Repositories.IMusicRepo _musicRepo;
@{
    ViewData["Title"] = "Arma Radio";

    bool userIsAuthenticated = (this.Context.User?.Identity?.IsAuthenticated ?? false);
    string sharedPlaylist = "";

    if (this.Context.Request.Query.ContainsKey("playlist"))
    {
        sharedPlaylist = this.Context.Request.Query["playlist"].ToString();
        var playlist = _musicRepo.GetSharedPlaylist(sharedPlaylist);

        if (playlist == null || playlist.PlaylistData == null || playlist.PlaylistData.Count == 0)
        {
            sharedPlaylist = "";
        }
    }
}

